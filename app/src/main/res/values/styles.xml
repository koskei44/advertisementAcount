    <!-- CustomLabel -->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@color/title_text_alt</item>
        <item name="android:actionMenuTextColor">@color/title_text_alt</item>
    </style>

    <style name="loginScreenHints">
        <item name="android:fontFamily">@font/sans_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    /****Below is the code for Runtime Permission Alert Dialog***************/

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#000000</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#000000</item>
        <!-- Used for the background -->
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="DatePickerSpinner">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>
    <style name="editTextViewAll">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sans_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">@color/grey_200</item>
    </style><![CDATA[




     

